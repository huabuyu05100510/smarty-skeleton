{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "dumi dev",
    "build:doc": "dumi build",
    "pub": "pnpm run build && pnpm -r --filter=./packages/* publish",
    "pub:beta": "pnpm run build && pnpm -r --filter=./packages/* publish --tag beta",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "babel-plugin-import": "^1.13.8",
    "dumi": "^1.1.48",
    "lerna": "^6.6.2"
  }
}
